<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/custom_et_padding_left"
              android:paddingRight="@dimen/custom_et_padding_right"
              android:gravity="center"
              android:background="@drawable/et_with_clear_btn"
              android:orientation="horizontal">

    <EditText
        android:id="@+id/et_custom_et_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/custom_et_text_size"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv_custom_et_clear"
        android:layout_width="@dimen/custom_et_clear_btn_size"
        android:layout_height="@dimen/custom_et_clear_btn_size"
        android:src="@drawable/btn_input_text_del"
        android:visibility="invisible"/>

</LinearLayout>